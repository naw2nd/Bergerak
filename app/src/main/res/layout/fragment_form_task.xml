<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="10dp"
    android:paddingHorizontal="10dp"
    >

    <EditText
        android:id="@+id/etNameTask"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="@string/name"
        android:inputType="textPersonName"
        android:backgroundTint="@color/orenPudar"
        android:textColorHint="@color/orenPudar"/>

    <EditText
        android:id="@+id/etDescTask"
        android:layout_width="match_parent"
        android:layout_height="303dp"
        android:layout_below="@id/etNameTask"
        android:ems="10"
        android:gravity="start|top"
        android:inputType="textMultiLine"
        android:hint="@string/desc"
        android:backgroundTint="@color/orenPudar"
        android:textColorHint="@color/orenPudar"/>

    <Button
        android:id="@+id/btnSave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etDescTask"
        android:layout_marginTop="67dp"
        android:layout_marginEnd="9dp"
        android:layout_marginRight="18dp"
        android:layout_alignParentEnd="true"
        android:text="@string/add"
        android:backgroundTint="@color/orenJeruk"
        android:textColor="@color/putih"/>

    <Button
        android:id="@+id/btnDelete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etDescTask"
        android:layout_marginTop="68dp"
        android:text="Delete"
        android:backgroundTint="@color/merah"
        android:textColor="@color/putih"/>

    <Button
        android:id="@+id/btnShare"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etDescTask"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="198dp"
        android:layout_marginTop="-1dp"
        android:layout_marginEnd="9dp"
        android:layout_toEndOf="@+id/cbStatus"
        android:text="@string/share"
        android:backgroundTint="@color/ijo"
        android:textColor="@color/putih" />

    <CheckBox
        android:id="@+id/cbStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etDescTask"
        android:layout_marginTop="6dp"
        android:text="@string/done"
        android:buttonTint="@color/orenPudar"
        android:textColor="@color/orenJeruk"/>
</RelativeLayout>